extends ../layout

append css
  link(rel="stylesheet", href="/bower_components/font-awesome/css/font-awesome.css")
  link(rel="stylesheet", href="/css/blog.css")
block content
  block header
    .blog-masthead
      .container
        nav.blog-nav
          if pageName === '/posts'
            a.blog-nav-item.active(href='/') 首页
          else 
            a.blog-nav-item(href='/') 首页
          if pageName === '/about'   
             a.blog-nav-item.active(href='/about') 关于
          else
            a.blog-nav-item(href='/about') 关于
          if pageName === '/contact'     
            a.blog-nav-item.active(href='/contact') 联系
          else
            a.blog-nav-item(href='/contact') 联系
  
  .container
    .row
      .col-sm-8.blog-main
        block main
      .col-sm-3.col-sm-offset-1.blog-sidebar
        .sidebar-module
          h4 文章分类
          ol.list-unstyled
            each item in categories
              li
                a(href='/posts/category/'+item.name,target="_blank")= item.name
            
            
        .sidebar-module
          h4 友情链接
          ol.list-unstyled
            li
              a(href='#') GitHub
            li
              a(href='#') Twitter
            li
              a(href='#') Facebook      

  block footer
    footer.blog-footer
          p
            | nodeblog by fengzheng1778@163.com
          
          p
            a(href='#') Back to top