extends layout

block main
  h2.page-header.post-view-header= post.title
  div.post.post-view
    div.post-meta
      span.post-created
        i.fa.fa-calendar
        | &nbsp;&nbsp;
        = moment(post.created).format('YYYY-MM-DD')
      span.post-author
        i.fa.fa-user
        | &nbsp;&nbsp;
        =post.author.name
      span.post-category
        i.fa.fa-shopping-basket
        | &nbsp;&nbsp;
        a(href='/posts/category/'+post.category.name,target="_blank")
          = post.category.name
      span.post-comment
        i.fa.fa-comment
        | &nbsp;&nbsp;
        = post.comments.length
      span.post-favorite
        i.fa.fa-star
        | &nbsp;&nbsp;
        = post.meta.favourites
    div.post-content     
      = post.content
    div.post-comments 
      h3 用户评论
      div.post-comment-list 
        if post.comments.length
          each item in post.comments
            div.post-comment-item 
              h4.post-comment-email= item.email
              small.pull-right= moment(item.created).format('YYYY-MM-DD')
              p.post-comment-content= item.content  
        else 
          p.alert.alert-info 还没有评论

      form.post.comment-form(action="/posts/comment/"+post._id,method="post") 
        h3 添加评论      
        div.form-group 
          label(for="email") 邮箱
          input.form-control(type="text",name="email",placeholder="请输入邮箱...")
        div.form-group 
          label(for="content") 内容
          textarea.form-control(type="text",name="content",placeholder="请输入内容...")
          button.btn.btn-primary 提交